generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String  @id @default(uuid())
  photo_url String?
  name      String
  email     String
  password  String

  Annotation   Annotation[]
  Notification Notification[]
}

model Tag {
  id               String             @id @default(uuid())
  name             String
  TagsOnAnnotation TagsOnAnnotation[]
}

model Annotation {
  id          String    @id @default(uuid())
  title       String
  description String
  status      String
  trashed_at  DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  ownerId     String

  owner User               @relation(fields: [ownerId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  tags  TagsOnAnnotation[]

  @@index([ownerId])
}

model TagsOnAnnotation {
  tag          Tag        @relation(fields: [tagId], references: [id])
  tagId        String
  annotation   Annotation @relation(fields: [annotationId], references: [id])
  annotationId String

  @@id([tagId, annotationId])
  @@index([annotationId])
  @@index([tagId])
}

model Notification {
  id            String @id @default(uuid())
  message       String
  userId        String
  annotation_id String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId])
}
