generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String       @id @default(uuid())
  photo_url   String?
  name        String
  email       String
  password    String
  annotations Annotation[]
}

model Tag {
  id          String             @id @default(uuid())
  name        String
  annotations TagsOnAnnotation[]
}

model Annotation {
  id         String             @id @default(uuid())
  title      String
  content    String
  status     String
  trashed_at DateTime?
  created_at DateTime           @default(now())
  updated_at DateTime           @updatedAt
  user       User               @relation(fields: [user_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user_id    String
  tags       TagsOnAnnotation[]

  @@index([user_id])
}

model TagsOnAnnotation {
  tag           Tag        @relation(fields: [tag_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tag_id        String
  annotation    Annotation @relation(fields: [annotation_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  annotation_id String

  @@id([tag_id, annotation_id])
  @@index([annotation_id])
  @@index([tag_id])
}
